{
    "version": 3,
    "configurePresets": [
        {
            "name": "debug",
            "displayName": "Build for Debug",
            "description": "Debug build with debug symbols and no optimization",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_STANDARD": "17",
                "CMAKE_C_STANDARD_REQUIRED": "ON",
                "CMAKE_C_FLAGS_DEBUG": "-g -O0 -Wall -Wextra",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Build for Release",
            "description": "Release build with optimizations",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_STANDARD": "17",
                "CMAKE_C_STANDARD_REQUIRED": "ON",
                "CMAKE_C_FLAGS_RELEASE": "-O3 -DNDEBUG -Wall -Wextra -flto -march=native -mtune=native -ffast-math -funroll-loops -fomit-frame-pointer",
                "CMAKE_EXE_LINKER_FLAGS_RELEASE": "-flto -Wl,--strip-all -Wl,--gc-sections"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Build",
            "description": "Build for debugging",
            "configurePreset": "debug",
            "jobs": 4
        },
        {
            "name": "release",
            "displayName": "Build",
            "description": "Build for release",
            "configurePreset": "release",
            "jobs": 4
        },
        {
            "name": "run-debug",
            "displayName": "Run",
            "description": "Build for debugging and immediately run",
            "configurePreset": "debug",
            "targets": ["run"],
            "jobs": 4
        },
        {
            "name": "run-release",
            "displayName": "Run",
            "description": "Build for release and immediately run",
            "configurePreset": "release",
            "targets": ["run"],
            "jobs": 4
        }
    ]
}
